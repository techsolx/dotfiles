alias hg="history | grep"
alias gr="git remote -v"
alias gs="git status"
alias gaa="git add ."
alias gc="git commit -m "
alias gb="git branch"
alias gl="git log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit"
alias tg="grep -rn --exclude-dir=.terraform"
alias tf="terraform"
alias k="kubectl"
alias kcc="kubectl config use-context"
alias kgc="kubectl config get-contexts"
alias kcs="kubectl config set-context --current"
alias kgi="kubectl get pods -o jsonpath="{..image}" | tr -s '[[:space:]]' '\n' | sort | uniq -c"
alias kgia="kubectl get pods -A -o jsonpath="{..image}" | tr -s '[[:space:]]' '\n' | sort | uniq -c"
