# jdm 9/23/14
#
# index outside server as it applies to both server blocks
#
index index.php index.html index.htm;

server {
  listen 80;
  server_name awa.techsolx.com;
  return 301 https://awa.techsolx.com$request_uri;
  }

server {
  listen  443;
  server_name awa.techsolx.com;
  ssl on;
  root /usr/share/nginx/www/awa.techsolx.com/public/;
  ssl_certificate /etc/ssl/localcerts/tsx1.techsolx.com.crt;
  ssl_certificate_key /etc/ssl/private/tsx1.techsolx.com.key;
#  ssl_certificate /etc/ssl/localcerts/techsolx.com.crt;
#  ssl_certificate_key /etc/ssl/localcerts/techsolx.com.key;

  location / {
  try_files $uri $uri/ /index.php?$query_string;
  }

#
# redirect server error pages to the static page /50x.html
#
  error_page 404 /404.html;
  error_page 500 502 503 504 /50x.html;
  location = /50x.html {
  root /usr/share/nginx/www;
}

#
# log files go here
#
access_log /usr/share/nginx/www/awa.techsolx.com/log/access.log;
error_log  /usr/share/nginx/www/awa.techsolx.com/log/error.log;
rewrite_log on;

#
# don't allow access to .files
#
  location ~ /\. {
    deny all;
    access_log off;
    log_not_found off;
  }

#
# don't log access to favicon
#
  location = /favicon.ico {
    log_not_found off;
    access_log off;
  }

#
# what to do with robots
#
  location = /robots.txt {
    return 200 "User-agent: *\nDisallow: /";
    log_not_found off;
    access_log off;
  }

#
# what to do with php requests 
#
  location ~ \.php$ {
    try_files $uri =404;
    fastcgi_pass unix:/var/run/php5-fpm.sock;
    fastcgi_index index.php;
    fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    include fastcgi_params;

  }
}

