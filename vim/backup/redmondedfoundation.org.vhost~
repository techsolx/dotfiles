##
# You should look at the following URL's in order to grasp a solid understanding
# of Nginx configuration files in order to fully unleash the power of Nginx.
# http://wiki.nginx.org/Pitfalls
# http://wiki.nginx.org/QuickStart
# http://wiki.nginx.org/Configuration
#
# Please see /usr/share/doc/nginx-doc/examples/ for more detailed examples.
##
index index.php;

server {
  listen 80; 
  server_name www.redmondedfoundation.org;
  return 301 $scheme://redmondedfoundation.org/$request_uri;
}
#
# now go on to site
#
server {
  listen 80; 
  server_name redmondedfoundation.org;
  root /home/refoundation/public/www;
#
# log files go here
#

  access_log /home/refoundation/public/log/access.log;
  error_log  /home/refoundation/public/log/error.log;

#
# redirect server error pages to the static page /50x.html
#
  error_page 404 /404.html;
  error_page 500 502 503 504 /50x.html;
  location = /50x.html {
    root /usr/share/nginx/www;
  }

#
# don't allow access to .files
#
  location ~ /\. {
    deny all;
    access_log off;
    log_not_found off;
  }

#
# don't log access to favicon
#
  location = /favicon.ico {
    log_not_found off;
    access_log off;
  }

#
# what to do with robots
#
  location = /robots.txt {
    allow all;
    log_not_found off;
    access_log off;
  }

#
# what to do with php requests 
# NOTE: You should have "cgi.fix_pathinfo = 0;" in php.ini
#
  location ~ \.php$ {
    try_files $uri =404;
    fastcgi_pass unix:/var/run/php5-fpm.sock;
    fastcgi_index index.php;
    fastcgi_param SCRIPT_FILENAME $document_root$fastcgi_script_name;
    include fastcgi_params;

  }
}
